{ 
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc",
            "command": "tsc",
            "type": "shell",
            "args": ["-p", "."],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": "$tsc"
        },

        {
            "label": "copy",
            "command": "copy",
            "type": "shell",
            "args": ["src/example/h5client/web/*.d.ts", "js/example/h5client/web"]
        }
    ]
}
  